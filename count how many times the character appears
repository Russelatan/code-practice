#include<stdio.h>




int main(){

    
    char input[100];
    char count_char;
    int count = 0;


    printf("Enter a string: ");
    fgets(input, 100, stdin);
    
    printf("Enter a character to count: ");
    
    scanf(" %c", &count_char);

    for (int i = 0; i < 100; i++){
        if (count_char == input[i]){
            count++;
        }
    }

    printf("The character '%c' appears %d times", count_char,count);
    

    
    return 0;
}
